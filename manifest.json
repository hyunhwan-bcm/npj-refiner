{
  "manifest_version": 3,
  "name": "npj refiner",
  "version": "1.0.0",
  "description": "Enhances Springer Nature: high-res images, HTML-CSS math rendering, and auto-expanded tables",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [],
  "host_permissions": [
    "https://www.nature.com/*",
    "https://*.nature.com/*",
    "https://*.springernature.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.nature.com/*",
        "https://*.nature.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
